#!/bin/bash
cd $GOPATH
RED='\033[0;31m'
NC='\033[0m' # No Color
GREEN="\[$(tput setaf 2)\]"
VERSION=$(bash $GOPATH/src/github.com/DanielRenne/goCoreAppTemplate/bin/get_version_local)
PRODUCTNAME=$(bash $GOPATH/src/github.com/DanielRenne/goCoreAppTemplate/bin/get_product_name_local)
port=$(bash $GOPATH/src/github.com/DanielRenne/goCoreAppTemplate/bin/get_port_local)
if [[ "$port" != "80" ]]; then
    nohup /usr/local/go/bin/go run -ldflags "-s -X github.com/DanielRenne/goCoreAppTemplate/settings.Version=${VERSION} -X github.com/DanielRenne/goCoreAppTemplate/settings.ProductName=${PRODUCTNAME}" src/github.com/DanielRenne/goCoreAppTemplate/goCoreAppTemplate.go > $GOPATH/src/github.com/DanielRenne/goCoreAppTemplate/log/app.log 2>&1 &
else
    whoami=$(whoami)
    if [[ "$whoami" == "root" ]]; then
        nohup /usr/local/go/bin/go run -ldflags "-s -X github.com/DanielRenne/goCoreAppTemplate/settings.Version=${VERSION} -X github.com/DanielRenne/goCoreAppTemplate/settings.ProductName=${PRODUCTNAME}" src/github.com/DanielRenne/goCoreAppTemplate/goCoreAppTemplate.go > $GOPATH/src/github.com/DanielRenne/goCoreAppTemplate/log/app.log 2>&1 &
    else
        nohup sudo /usr/local/go/bin/go run -ldflags "-s -X github.com/DanielRenne/goCoreAppTemplate/settings.Version=${VERSION} -X github.com/DanielRenne/goCoreAppTemplate/settings.ProductName=${PRODUCTNAME}" src/github.com/DanielRenne/goCoreAppTemplate/goCoreAppTemplate.go > $GOPATH/src/github.com/DanielRenne/goCoreAppTemplate/log/app.log 2>&1 &
    fi
fi
bash $GOPATH/src/github.com/DanielRenne/goCoreAppTemplate/bin/check_golang_errors &
