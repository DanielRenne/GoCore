#!/bin/bash
set -e
GREEN="\[$(tput setaf 2)\]"
NC='\033[0m' # No Color
bash $GOPATH/src/github.com/DanielRenne/goCoreAppTemplate/bin/create_page_base "$1" "$2" "$3"

echo -e "${GREEN}Formatting golang!${NC}"
set +e
bash $GOPATH/src/github.com/DanielRenne/goCoreAppTemplate/bin/format
bash $GOPATH/src/github.com/DanielRenne/goCoreAppTemplate/bin/hotreload
bash $GOPATH/src/github.com/DanielRenne/goCoreAppTemplate/bin/build
echo -e "${GREEN}!!!!!!!!!!!!!!!!!!!!${NC}"
echo -e "${GREEN}      All Done      ${NC}"
echo -e "${GREEN}!!!!!!!!!!!!!!!!!!!!${NC}"