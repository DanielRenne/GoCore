#!/bin/bash
bash $GOPATH/src/github.com/DanielRenne/goCoreAppTemplate/bin/kill_servers
    gsed
    ret=$?
    if [[ "$ret" -eq 0 ]]; then
        echo "gsed exists"
    else
        if [ "$(uname)" == "Darwin" ]; then
            echo "You must have gsed installed for this to work:"
            echo ""
            echo "sudo port install gsed"
            echo ""
            echo "or homebrew"
            echo ""
            echo "sudo brew install gnu-sed"
            exit 2
        else
            whereis=$(which sed)
            cd /usr/bin/
            ln -s "$whereis" gsed
        fi
    fi

set -e
GREEN="\[$(tput setaf 2)\]"
NC='\033[0m' # No Color
bash $GOPATH/src/github.com/DanielRenne/goCoreAppTemplate/bin/create_page_base "$1" "$2" "$3"

echo -e "${GREEN}Formatting golang!${NC}"
set +e
bash $GOPATH/src/github.com/DanielRenne/goCoreAppTemplate/bin/format
cd $GOPATH
go run src/github.com/DanielRenne/goCoreAppTemplate/bin/createRoles.go
echo -e "${GREEN}!!!!!!!!!!!!!!!!!!!!${NC}"
echo -e "${GREEN}      All Done      ${NC}"
echo -e "${GREEN}!!!!!!!!!!!!!!!!!!!!${NC}"